{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-east-2",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "strapi",
          "name": "Strapi API",
          "type": "fargate",
          "cpu": 0.5,
          "memory": 1024,
          "domain": "api.memeticsresearch.com",
          "minInstances": 1,
          "maxInstances": 1,
          "buildType": "nixpacks",
          "env": {
            "NODE_ENV": "production",
            "DATABASE_URL": "${databases.main.connectionString}",
            "URL": "https://api.memeticsresearch.com"
          },
          "healthCheck": {
            "path": "/_health"
          }
        }
      ],
      "databases": [
        {
          "id": "main",
          "name": "Main Database",
          "type": "postgresql",
          "version": "15",
          "size": "db.t3.micro",
          "storage": 20
        }
      ]
    }
  ]
} 